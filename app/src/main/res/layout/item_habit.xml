<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Emoji Section -->
        <TextView
            android:id="@+id/tvHabitEmoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸ˜Š"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_marginEnd="16dp"/>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHabitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habit Name"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvHabitDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Habit Description"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"/>

            <!-- Checkbox -->
            <CheckBox
                android:id="@+id/cbHabitComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mark as completed"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/btnEditHabit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Edit habit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:tint="@color/colorAccent"/>

            <ImageButton
                android:id="@+id/btnDeleteHabit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete habit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:tint="#E53935"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>